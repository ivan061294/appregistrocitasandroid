<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuienesS_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5mm"
        android:background="@color/Celeste"
        tools:ignore="MissingConstraints" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" QUIENES SOMOS "
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/BlancoPerla"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5mm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/BlancoPerla"
        tools:ignore="MissingConstraints" >
        <TextView
            android:text="SOMOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/edtSomos"
            android:layout_width="match_parent"
            android:layout_height="40mm"
            android:text="En el área médica ejercen profesionales de destacada trayectoria en el ámbito local, que realizan capacitaciones y actualizacionesacadémicas permanentemente. Además la Clínica cuenta con un plantel de médicos itinerantes provenientes de las instituciones más reconocidas del país. En tanto que el área de enfermería es reconocida por su óptima relación con los pacientes. En los últimos años la institución ha realizado inversiones muy importantes en tecnología e infraestructura que permite brindar servicios de alta performance. Estas inversiones la colocan en la vanguardia de los centros asistenciales de la región. Centro de formación profesional Con el aval del Colegio Médico y la Sociedad de Pediatría, la institución es un centro de formación profesional que recibe a médicos de todas las universidades del país que realizan residencias en sus instalaciones. "
            android:layout_marginTop="15dp"
            android:textSize="13dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
        --
        <TextView
            android:text="Informacion de los creadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center" />
        <EditText
            android:id="@+id/edtInformacion"
            android:layout_width="match_parent"
            android:layout_height="13mm"
            android:text="Somos un grupo de estudiantes del 6° ciclo con el fin de realizar una aplicacion mobile para el mejoramiento del registro de citas medicas de la clinica que nos a contratado."
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="MISION"
                android:layout_width="30mm"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAlignment="center" />
            <TextView
            android:text="VISION"
            android:layout_width="30mm"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtMision"
            android:layout_width="30mm"
            android:text="Satisfacer de manera eficaz y eficiente las necesidades de cuidado de salud de la comunidad.
Brindar a toda la comunidad la mejor atención medica basada en la evidencia científica y contenido ético, acompañando al paciente y su familia."
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:textSize="15dp"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
        <EditText
            android:id="@+id/edtVision"
            android:layout_width="30mm"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:textSize="15dp"
            android:text="Crear y sostener un sistema integral de salud privada, que ofrezca un espacio de crecimiento y desarrollo profesional enfocado en la excelencia y calidez en la asistencia al paciente y su familia."
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>