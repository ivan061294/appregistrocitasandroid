<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/Celeste"
        tools:ignore="MissingConstraints">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/BlancoPerla"
        android:layout_marginTop="20mm"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese su Usuario"
            android:textAlignment="center"
            android:layout_marginTop="5mm"
            android:textSize="30dp"
            android:textColor="@color/design_default_color_secondary"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtUsuarioDNI"
            android:hint="Ingrese su Usuario(DNI)"
            android:textColorHint="@color/CelestePastel"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10sp"
            android:ems="10"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tContrasena"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_marginTop="10sp"
            android:textColor="@color/design_default_color_secondary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtLContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Ingrese su Contraseña"
            android:textColorHint="@color/CelestePastel"
            android:ems="10"
            android:layout_marginTop="10sp"
            android:textSize="20dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tBIngresar"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="80dp"
            android:textAlignment="center"
            android:textSize="35dp"
            android:backgroundTint="@color/Celeste"
            android:textColor="@color/BlancoPerla"
            android:textStyle="bold"/>
        <HorizontalScrollView
            android:layout_width="50mm"
            android:layout_height="0.8mm"
            android:layout_marginStart="30dp"
            android:background="@color/CelestePastel"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿No tienes Cuenta?"
                android:textStyle="italic"
                android:textColor="@color/CelestePastel"
                android:textSize="18dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btnAgregarUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Crear Usuario"
                android:backgroundTint="@color/BlancoPerla"
                android:textStyle="italic"
                android:textColor="@color/Celeste"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>