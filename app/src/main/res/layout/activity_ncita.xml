<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NCita_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5mm"
        android:background="@color/Celeste"
        tools:ignore="MissingConstraints" >
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="REGISTRO DE CITAS"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/BlancoPerla"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/BlancoPerla"
        tools:ignore="MissingConstraints" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5mm"
            tools:ignore="MissingConstraints,Orientation"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPaciente"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Paciente:"

                android:textColor="@color/purple_700"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/tvEstado"
            android:textAlignment="center"
            android:text="Estado:"/>
        <Spinner
            android:id="@+id/spEstado"
            android:layout_marginTop="15dp"
            android:layout_width="40mm"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"/>
        -----
        <TextView
            android:id="@+id/tvTHorario"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Tipo de Horario:"/>
        <Spinner
            android:id="@+id/cboTHorario"
            android:layout_width="40mm"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"/>
        ----
        <TextView
            android:id="@+id/tvEspecialidad"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Tipo de especialidad:"/>
        <Spinner
            android:id="@+id/cboTEspecialidad"
            android:layout_width="40mm"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"/>
        ---
        <TextView
            android:id="@+id/tvMDisponible"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Medicos Disponibles:"/>
        <Spinner
            android:id="@+id/cboMDisponible"
            android:layout_width="40mm"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"/>
        ----
        <TextView
            android:id="@+id/tvComentario"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Comentarios:"/>
        <EditText
            android:id="@+id/txtComentario"
            android:layout_width="40mm"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"/>
        ----
        <TextView
            android:id="@+id/tvFAtencion"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Fecha de atencion:"/>

        <EditText
            android:id="@+id/txtFAtencionN"
            android:layout_width="40mm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:hint="Ejemplo:1999-10-25"
            android:inputType="date" />
        ----
        <Button
            android:id="@+id/btnGuardarC"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textColor="@color/black"
            android:backgroundTint="@color/CelestePastel"
            android:layout_marginStart="20mm"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>